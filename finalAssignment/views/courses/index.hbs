<h1 style="text-align: center; margin-bottom: 20px;">
  {{title}}
</h1>

{{!-- Add links to CRUD operations --}}
{{#if user}}
  <a href="/courses/add" style="display: block; text-align: center; margin: 20px 0; font-weight: bold; color: #007bff; text-decoration: none;">Add a new Skill</a>
{{/if}}

{{!-- To Show data --}}
<table style="width: 100%; border-collapse: collapse; margin: 20px auto; border: 1px solid #ccc;">
  <thead>
    <tr>
      <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">Name</th>
      <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">Code</th>
    </tr>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td style="border: 1px solid #ddd; padding: 8px;">{{this.name}}</td>
      <td style="border: 1px solid #ddd; padding: 8px;">{{this.code}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>