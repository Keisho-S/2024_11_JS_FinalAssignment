<h1 style="text-align: center; margin-bottom: 20px;">
  {{title}}
</h1>

<form method="POST" style="max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f9f9f9;">
  <fieldset style="border: none; margin-bottom: 15px;">
    <label for="name" style="display: block; margin-bottom: 5px;">
      Name:
    </label>
    <input name="name" id="name" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
  </fieldset>
  
  <fieldset style="border: none; margin-bottom: 15px;">
    <label for="code" style="display: block; margin-bottom: 5px;">
      Code:
    </label>
    <input name="code" id="code" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
  </fieldset>
  
  <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">
    Save
  </button>
</form>